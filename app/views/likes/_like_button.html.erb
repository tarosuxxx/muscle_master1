<%# このパーシャルは、ローカル変数 'post' を受け取ってレンダリングされます %>
<div class="d-flex align-items-center">
  <span class="badge bg-danger p-2 me-2">❤️ <%= post.likes.count %></span>
  
  <% if current_user.already_liked?(post) %>
    <%= link_to '解除', post_likes_path(post), 
                method: :delete, 
                data: { remote: true }, 
                class: 'btn btn-sm btn-secondary' %>
  <% else %>
    <%= link_to 'いいね！', post_likes_path(post), 
                method: :post, 
                data: { remote: true }, 
                class: 'btn btn-sm btn-danger' %>
  <% end %>
</div>