<%# app/views/admin/comments/index.html.erb %>

<div class="container my-5">
  <h2><i class="fas fa-comments me-2"></i>コメント管理</h2>
  <p class="lead text-muted">全ての投稿に対するコメントを管理します。</p>
  
  <table class="table table-hover table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>内容</th>
        <th>投稿者</th>
        <th>対象投稿</th>
        <th>投稿日時</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.id %></td>
          <td><%= comment.content.truncate(50) %></td>
          <td><%= link_to comment.user.name, admin_user_path(comment.user), class: 'text-primary' %></td>
          <td><%= link_to "投稿##{comment.post.id}", admin_post_path(comment.post), class: 'text-success' %></td>
          <td><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <td>
            <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: 'このコメントを完全に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%# ページネーションが必要な場合はここに %>
  
  <%= link_to 'ダッシュボードに戻る', admin_root_path, class: 'btn btn-secondary mt-4' %>
</div>