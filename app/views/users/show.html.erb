<div class="container my-5">
  <div class="row user-profile-container">
    <div class="col-lg-4 mb-4">
      <div class="card shadow-lg p-4 sticky-top" style="top: 80px;"> 
        
        <h2 class="fw-bold mb-4 border-bottom pb-2 text-primary">
          <i class="fas fa-id-badge me-2"></i>プロフィール
        </h2>
        
        <div class="text-center mb-4">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar.variant(resize_to_fill: [120, 120]), 
              class: 'rounded-circle mb-3 border border-3 border-primary', 
              style: 'width: 120px; height: 120px; object-fit: cover;' %>
          <% else %>
            <div class="rounded-circle mx-auto mb-3 bg-light d-flex align-items-center justify-content-center border border-3 border-primary" style="width: 120px; height: 120px;">
              <i class="fas fa-user-circle fa-5x text-secondary"></i>
            </div>
          <% end %>
          
          <h3 class="fw-bolder mb-1 text-dark"><%= @user.name %></h3>
          <p class="text-muted small mb-3"><%= @user.email %></p>
        </div>
        <div class="card bg-light shadow-sm mb-4">
          <div class="card-body p-2">
            <div class="row text-center">
              <div class="col-6 border-end">
                <p class="mb-0 fw-bold fs-5"><%= @user.try(:followers).present? ? @user.followers.count : 0 %></p>
                <small class="text-muted">フォロワー</small>
              </div>
              <div class="col-6">
                <p class="mb-0 fw-bold fs-5"><%= @user.try(:followings).present? ? @user.followings.count : 0 %></p>
                <small class="text-muted">フォロー</small>
              </div>
            </div>
          </div>
        </div>
        <h4 class="fw-bold mb-2 mt-2 border-bottom pb-1 text-secondary">
          <i class="fas fa-comment-dots me-2"></i>自己紹介
        </h4>
        <div class="mb-4">
          <p class="text-break text-muted small">
            <% if @user.description.present? %>
              <%= @user.description %>
            <% else %>
              <span class="fst-italic text-secondary">まだ自己紹介がありません。あなたのトレーニング目標を共有しましょう！</span>
            <% end %>
          </p>
        </div>
        <div class="mt-auto pt-3 border-top">
          <% if @user == current_user %>
            <%= link_to 'プロフィール編集', edit_user_registration_path, class: 'btn btn-orange w-100 mb-2' %> 
            <%= link_to 'アカウント削除/退会手続き', '#', class: 'btn btn-outline-danger w-100' %>
          <% else %>
            <button class="btn btn-success w-100 btn-lg shadow-sm"><i class="fas fa-heart me-2"></i>フォローする</button>
          <% end %>
        </div>
        
      </div>
    </div>
    
 
    <div class="col-lg-8">
      
      <h2 class="fw-bold mb-4 border-bottom pb-2 text-success">
        <i class="fas fa-list me-2"></i> 
      </h2>
      
      <% if @posts.any? %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4"> 
            <%= render 'posts/posts', posts: @posts %>
        </div>
      <% else %>
        <div class="alert alert-info text-center p-5 mt-5 shadow-sm">
          <i class="fas fa-clipboard-list fa-3x mb-3"></i>
          <h4 class="fw-bold">まだ投稿がありません。</h4>
          <p class="mb-3">あなたのトレーニング動画を共有して、仲間と交流を始めましょう！</p>
          <% if @user == current_user %>
            <%= link_to '新規投稿する', new_post_path, class: 'btn btn-info' %>
          <% end %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>