<header class="navbar navbar-expand-lg navbar-dark bg-gradient-orange sticky-top shadow-lg">
  <div class="container">
    <%# ブランドロゴ %>
    <%= link_to 'MUSCLEMASTER SNS', root_path, class: 'navbar-brand text-white fw-bolder fs-4' %>
    
    <%# ハンバーガーメニューボタン %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        
        <%# 1. 共通ナビゲーション %>
        <li class="nav-item">
          <%= link_to posts_path, class: 'nav-link' do %>
            <i class="fas fa-stream me-1"></i> タイムライン
          <% end %>
        </li>
        
        <li class="nav-item">
          <%= link_to about_path, class: 'nav-link' do %>
            <i class="fas fa-info-circle me-1"></i> About
          <% end %>
        </li>

        <%# 2. 管理者ダッシュボード（安全なチェックに変更） %>
        <% if current_user.present? && current_user.is_admin? %> 
          <li class="nav-item">
            <%= link_to admin_root_path, class: 'nav-link fw-bold text-warning' do %>
              <i class="fas fa-chart-bar me-1"></i> 管理者ダッシュボード
            <% end %>
          </li>
        <% end %>
        
        <li class="nav-item dropdown d-lg-none">
          <hr class="dropdown-divider bg-white my-1">
        </li>

        <%# 3. ログイン/ログアウトとユーザー情報 %>
        <% if user_signed_in? %>
          <%# ユーザー名/マイページ %>
          <li class="nav-item">
            <%= link_to user_path(current_user), class: 'nav-link fw-bold' do %>
              <i class="fas fa-user-circle me-1"></i> <%= current_user.name %>
            <% end %>
          </li>
          
          <%# ログアウト %>
          <li class="nav-item">
            <%= form_with url: destroy_user_session_path, method: :delete, class: 'm-0 p-0' do |f| %>
              <%= f.button type: 'submit', class: 'btn btn-link nav-link' do %>
                <i class="fas fa-sign-out-alt me-1"></i> ログアウト
              <% end %>
            <% end %>
          </li>
          
        <% else %>
          <%# サインイン (強調削除) %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: 'nav-link' do %> <%# btnクラスを削除 %>
              <i class="fas fa-sign-in-alt me-1"></i> サインイン
            <% end %>
          </li>
          <%# 新規登録 (強調削除) %>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: 'nav-link' do %> <%# btnクラスを削除 %>
              <i class="fas fa-user-plus me-1"></i> 新規登録
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>