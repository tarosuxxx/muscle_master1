<%= form_with model: post, local: true, class: "data-loading-show" do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= post.errors.count %>件のエラーにより保存できませんでした:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :content, "意識しているポイント" %>
    <%= f.text_area :content, class: 'form-control', rows: 4 %>
  </div>
  
  <%# 🌟 動画ファイルアップロード (省略可能) 🌟 %>
  <div class="mb-3">
    <%= f.label :video_file, "動画ファイル" %>
    <%= f.file_field :video_file, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>