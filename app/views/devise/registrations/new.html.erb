<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg p-4">
        
        <h2 class="text-center mb-4 text-primary fw-bold">
          <i class="fas fa-user-plus me-2"></i>新規登録
        </h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :name, "名前", class: "form-label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "ユーザー名を入力" %>
          </div>
          
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "6文字以上" %>
            <% if @minimum_password_length %>
              <div class="form-text text-muted">
                (<%= @minimum_password_length %> 文字以上)
              </div>
            <% end %>
          </div>

          <div class="mb-4">
            <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを再入力" %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
        
        <div class="text-center mt-3">
          <%= render "devise/shared/links" %>
        </div>
        
      </div>
    </div>
  </div>
</div>