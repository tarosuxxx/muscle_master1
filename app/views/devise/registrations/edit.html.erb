<div class="row justify-content-center my-5">
    <div class="col-md-6">
        <div class="card p-4 shadow-lg">
            
            <h2 class="text-center mb-4">プロフィール編集</h2>
            
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              
              <div class="mb-4 text-center">
                <% if resource.avatar.attached? %>
                  <%= image_tag resource.avatar, 
                                class: 'rounded-circle mb-2', 
                                style: 'width: 100px; height: 100px; object-fit: cover;' %>
                <% else %>
                  <i class="fas fa-user-circle fa-5x text-secondary mb-3"></i>
                <% end %>
                
                <%= f.label :avatar, 'アバター画像を変更', class: 'form-label' %><br />
                <%= f.file_field :avatar, class: 'form-control' %>
              </div>
              
              <%# === 【追加】ユーザー名フィールド === %>
              <div class="mb-3">
                <%= f.label :name, 'ユーザー名', class: 'form-label' %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
              </div>
              
              <div class="mb-3">
                <%= f.label :email, 'メールアドレス', class: 'form-label' %><br />
                <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="alert alert-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="mb-3">
                <%= f.label :password, '新しいパスワード', class: 'form-label' %> 
                <small class="text-muted">(変更しない場合は空欄)</small><br />
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                <% if @minimum_password_length %>
                  <em class="small text-muted"><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="mb-3">
                <%= f.label :password_confirmation, 'パスワード（確認）', class: 'form-label' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </div>

              <div class="mb-3">
                <%= f.label :current_password, '現在のパスワード', class: 'form-label' %> 
                <small class="text-muted">(変更を保存するには現在のパスワードが必要です)</small><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
              </div>

              <div class="actions mt-4">
                <%= f.submit "更新する", class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>
            
            <hr class="my-3">
            
            <div class="text-center">
              <h3>アカウント削除</h3>
              <%= button_to "アカウントを削除/退会する", registration_path(resource_name), 
                          data: { turbo_method: :delete, turbo_confirm: "本当に退会しますか？" }, 
                          class: 'btn btn-link text-danger' %>
            </div>
            
        </div>
    </div>
</div>