<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-lg p-4">
        
        <h2 class="text-center mb-4 text-orange fw-bold">
          <i class="fas fa-sign-in-alt me-2"></i>ログイン
        </h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワードを入力" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid gap-2 mb-3">
            <%= f.submit "ログイン", class: "btn btn-orange btn-lg" %>
          </div>
        <% end %>
        
        <div class="text-center mt-3 border-top pt-3">
          <%= render "devise/shared/links" %>
        </div>
        
      </div>
    </div>
  </div>
</div>

<%# styleタグは、ボタンの色をアプリケーションのテーマカラーに合わせるために一時的に追加 %>
<style>
.text-orange {
  color: #ff9800; /* ヘッダーの色に合わせて調整 */
}
.btn-orange {
  color: #fff;
  background-color: #ff9800; /* ヘッダーの色に合わせて調整 */
  border-color: #ff9800;
}
.btn-orange:hover {
  background-color: #e68900;
  border-color: #e68900;
}
</style>